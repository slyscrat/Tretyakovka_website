<!DOCTYPE html>
<head>
<title>Третьяковская галерея</title>
<meta charset="utf-8">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
<link rel="shortcut icon" href="./images/demo/logo.png" type="image/png">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
<link href="./css/layout.css" rel="stylesheet" type="text/css" media="all">
<link href="./css/pictures.css" rel="stylesheet" type="text/css" media="all">
</head>
<body id="top">
<h1 id="hid" hidden>{{user.role}}</h1>
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<!-- Top Background Image Wrapper -->
<div class="bgded" style="background-image:url('./images/demo/backgrounds/05.jpg');"> 
  <!-- ################################################################################################ -->
  <div class="wrapper row1">
    <header id="header" class="hoc clear"> 
      <!-- ################################################################################################ -->
      <div id="logo" class="fl_left">
        <h1><a href="./">Третьяковская Галерея</a></h1>
      </div>
      <nav id="mainav" class="fl_right">
      <nav id="mainav" class="fl_right">
        <ul class="clear">
          <li class="active"><a href="#">Выставки</a></li>
          <li><a class="drop" href="#">Галерея</a>
            <ul>
              <li><a href="./departs">Адреса</a></li>
              <li><a href="./employees">Работники</a></li>
			  <li><a href="./tickets">Билеты</a></li>
            </ul>
          </li>
          <li><a class="drop" href="#">Образование</a>
            <ul>
              <li><a href="./programms">Программы</a></li>
              <li><a class="drop" href="#">Картины</a>
                <ul>
                  <li><a href="./excursions">Экскурсии</a></li>
                  <li><a href="./exhibitions">Выставки</a></li>
                </ul>
              </li>
            </ul>
          </li>
          <li><a href="./dashboard">Личный кабинет</a></li>
		  <li><a  id="exch" href="./logout">Выход</a></li>
        </ul>
      </nav>
      <!-- ################################################################################################ -->
    </header>
  </div>
  <!-- ################################################################################################ -->
  <!-- ################################################################################################ -->
  <!-- ################################################################################################ -->
  <div class="wrapper row2">
    <section class="hoc container clear"> 
    <!-- ################################################################################################ -->
    <div class="sectiontitle">
      <h6 class="heading">Выставки</h6>
    </div>
	<div id="cont">
		<div class="slide" id="slide">
			{{#each result}}
			  <div class="bg">
				<img class="bg-pic" src="./images/b1.jpg"/>
				<img class="picture" src="{{this.image}}" onmouseover="up();" onmouseout="down();"/>
				<h1 id="hid-id" hidden>{{this.id}}</h1>
				<div class="pic-info" align="center">
				{{this.name}}</br>
				<i>{{this.author}}, {{this.category}}, {{this.year}}</i>
				</div>
			  </div>
			{{/each}}
		</div>
		</div>
	<div id="navLinks">
    <ul>
	{{#each result}}
        <li class="itemLinks" data-pos="0px"></li>
    {{/each}}   
    </ul>
</div>
    <!-- ################################################################################################ -->
  </section>
  </div>
  <!--style="display: none;" -->
  <div class="wrapper row2" style="display: none;">
    <section class="hoc container clear"> 
    <!-- ################################################################################################ -->
    <div class="sectiontitle">
      <h6 class="heading">Редактор</h6>
	  <p>{{message}}</p>
    </div>
    <ul class="nospace group elements">
	{{#each result}}
      <li class="one_third first">
        <form name="deletePicture" method="post" action="/pictures">
			<input class="text" name="id" type="text" value="{{this.id}}" hidden="true"/>
			<input class="text" name="name" type="text" value="{{this.name}}"/>
			<input class="text" name="author" type="text" value="{{this.author}}"/>
			<input class="text" name="year" type="text" value="{{this.year}}"/>
			<input class="text" name="exhiName" type="text" value="{{this.exhi.name}}"/>
			<input class="text" name="category" type="text" value="{{this.category}}"/>
			<input class="btn" type="submit" name="action" value="Delete" /></td>
			<input class="btn" type="submit" name="action" value="Update" /></td>
		</form>
      </li>
	{{/each}} 
	<li class="one_third first">
		<form name="addPicture" method="post" action="/pictures">
			<input class="text" name="name" type="text"/>
			<input class="text" name="author" type="text"/>
			<input class="text" name="year" type="text"/>
			<input class="text" name="exhiName" type="text" value="{{result.[0].exhi.name}}" hidden="true"/>
			<input class="text" name="category" type="text"/>
			<input class="btn" type="submit" name="action" value="Add" /></td>
		</form>
	</li>
    </ul>
    <!-- ################################################################################################ -->
  </section>
  </div>
  <!-- ################################################################################################ -->
</div>

<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<div class="wrapper row5">
  <div id="copyright" class="hoc clear"> 
    <!-- ################################################################################################ -->
    <p class="fl_left">Copyright &copy; 2017 - All Rights Reserved</p>
<!-- ################################################################################################ -->
  </div>
</div>
